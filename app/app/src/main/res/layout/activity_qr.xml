<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp"
    tools:context=".sendActivity">

    <TextView
    android:id="@+id/title_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Share Connection Code"
    android:textColor="#1A237E"
    android:textSize="28sp"
    android:fontFamily="sans-serif-medium"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Receiver can scan this or type the code."
        android:textColor="#616161"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <androidx.cardview.widget.CardView
        android:id="@+id/qrCodeCard"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_text">

        <ImageView
            android:id="@+id/qr_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/loading" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/qrCodeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connection Code:"
        android:textColor="#1A237E"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrCodeCard" />

    <TextView
        android:id="@+id/qrText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="....."
        android:textColor="#212121"
        android:textSize="24sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:background="@drawable/rounded_text_background"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrCodeLabel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shareButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:text="Share Code"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="12dp"
        android:backgroundTint="#4CAF50"
        app:icon="@drawable/share"
        app:iconGravity="textStart"
        app:iconPadding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>